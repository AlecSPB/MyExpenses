<resources>
  <style name="Launch" parent="@style/Theme.AppCompat">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowNoTitle">true</item>
  </style>
	<style name="Translucent.NoTitleBar" parent="@android:style/Theme.Translucent.NoTitleBar"/>
	<style name="BaseDark" parent="@style/Theme.AppCompat">
    <item name="actionBarStyle">@style/ActionBarDark</item>
  </style>
  <style name="BaseLight" parent="@style/Theme.AppCompat.Light">
    <item name="actionBarStyle">@style/ActionBarLight</item>
  </style>
  <style name="ThemeDark" parent="BaseDark">
    <item name="dropdownListPreferredItemHeight">48sp</item>
    <item name="colorIncome">#00D000</item>
    <item name="colorExpense">#FF0000</item>
    <item name="colorAggregate">#FFFFFF</item>
    <item name="drawerBackground">#222</item>
    <item name="pageMargin">@drawable/pagermargin_white</item>
    <item name="calcIcon">@drawable/ic_action_calc_light</item>
    <item name="drawerShadow">@drawable/drawer_shadow_holo_dark</item>
    <item name="drawerImage">@drawable/ic_drawer_holo_dark</item>
  </style>
  <style name="ThemeLight" parent="BaseLight">
    <item name="dropdownListPreferredItemHeight">48sp</item>
    <item name="android:dropDownItemStyle">@style/Widget.DropDownItemLight</item>
    <item name="android:autoCompleteTextViewStyle">@style/Widget.AutoCompleteTextViewLight</item>
    <item name="colorIncome">#008000</item>
    <item name="colorExpense">#800000</item>
    <item name="colorAggregate">#000000</item>
    <item name="drawerBackground">#ddd</item>
    <item name="pageMargin">@drawable/pagermargin_black</item>
    <item name="calcIcon">@drawable/ic_action_calc_dark</item>
    <item name="drawerShadow">@drawable/drawer_shadow_holo_light</item>
    <item name="drawerImage">@drawable/ic_drawer_holo_light</item>
  </style>
  <style name="AboutDialog" parent="@android:style/Theme.Dialog">
    <item name="android:textColor">?android:attr/textColorPrimaryInverseDisableOnly</item>
  </style>
  <style name="ThemeDark.s1">
    <item name="android:textAppearanceLarge">@style/MyTextAppearanceLarge.s1</item>
    <item name="android:textAppearanceMedium">@style/MyTextAppearanceMedium.s1</item>
    <item name="android:textAppearanceSmall">@style/MyTextAppearanceSmall.s1</item>
  </style>
  <style name="ThemeLight.s1">
    <item name="android:textAppearanceLarge">@style/MyTextAppearanceLarge.s1</item>
    <item name="android:textAppearanceMedium">@style/MyTextAppearanceMedium.s1</item>
    <item name="android:textAppearanceSmall">@style/MyTextAppearanceSmall.s1</item>
  </style>
  <style name="ThemeDark.s2">
    <item name="android:textAppearanceLarge">@style/MyTextAppearanceLarge.s2</item>
    <item name="android:textAppearanceMedium">@style/MyTextAppearanceMedium.s2</item>
    <item name="android:textAppearanceSmall">@style/MyTextAppearanceSmall.s2</item>
  </style>
  <style name="ThemeLight.s2">
    <item name="android:textAppearanceLarge">@style/MyTextAppearanceLarge.s2</item>
    <item name="android:textAppearanceMedium">@style/MyTextAppearanceMedium.s2</item>
    <item name="android:textAppearanceSmall">@style/MyTextAppearanceSmall.s2</item>
  </style>
  <style name="ThemeDark.s3">
    <item name="android:textAppearanceLarge">@style/MyTextAppearanceLarge.s3</item>
