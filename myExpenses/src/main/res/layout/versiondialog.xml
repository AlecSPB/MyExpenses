<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/layoutMain"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
    android:orientation="vertical" >
  <TextView android:id="@+id/ImportantUpgradeInfoHeading"
      android:text="@string/important_upgrade_information_heading"
      style="@style/headingStyle.WithBorder"
      android:visibility="gone"/>
  <TextView android:id="@+id/ImportantUpgradeInfoBody"
      android:text="@string/important_upgrade_information_1"
      style="@style/about_text.white" android:visibility="gone"/>
  <ListView
      android:listSelector="@android:color/transparent"
      android:id="@+id/list"
		  android:layout_width="fill_parent"
		  android:layout_height="fill_parent"
		  android:drawSelectorOnTop="false"/>
</LinearLayout>

