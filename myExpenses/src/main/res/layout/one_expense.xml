<LinearLayout android:id="@+id/OneExpense"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar_expense_edit"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:fillViewport="true">

        <TableLayout
            android:id="@+id/Table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_form"
            android:paddingRight="@dimen/padding_form"
            android:shrinkColumns="1"
            android:stretchColumns="1">

            <TableRow
                android:id="@+id/TitleRow"
                android:visibility="gone">

                <TextView
                    android:id="@+id/TitleLabel"
                    style="@style/form_label.compat"
                    android:text="@string/title"/>

                <EditText
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"/>
            </TableRow>

            <TableRow android:id="@+id/AccountParent">

                <TextView
                    android:id="@+id/AccountLabel"
                    style="@style/form_label.compat"
                    android:text="@string/account"/>

                <Spinner
                    android:id="@+id/Account"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow
                android:id="@+id/TransferAccountRow"
                android:visibility="gone">

                <TextView
                    android:id="@+id/TransferAccountLabel"
                    style="@style/form_label.compat"
                    android:text="@string/transfer_to_account"/>

                <Spinner
                    android:id="@+id/TransferAccount"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow android:id="@+id/DateRow">

                <TextView
                    android:id="@+id/DateLabel"
                    style="@style/form_label.compat"
                    android:text="@string/date"/>

                <Button
                    android:id="@+id/DateButton"
                    style="@style/SmallButton"
                    android:layout_gravity="center_vertical"
                    android:text="@string/select"/>
            </TableRow>

            <TableRow android:id="@+id/TimeRow">

                <TextView
                    android:id="@+id/TimeLabel"
                    style="@style/form_label.compat"
                    android:text="@string/time"/>

                <Button
                    android:id="@+id/TimeButton"
                    style="@style/SmallButton"
                    android:layout_gravity="center_vertical"
                    android:text="@string/select"/>
            </TableRow>

            <TableRow android:id="@+id/PayeeRow">

                <TextView
                    android:id="@+id/PayeeLabel"
                    style="@style/form_label.compat"
                    android:text="@string/payee"/>

                <AutoCompleteTextView
                    android:id="@+id/Payee"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:inputType="textPersonName"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/AmountLabel"
                    style="@style/form_label.compat"
                    android:textColor="?attr/colorAccent"/>

                <LinearLayout android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <include layout="@layout/amount_input"/>
                </LinearLayout>
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/CommentLabel"
                    style="@style/form_label.compat"
                    android:text="@string/comment"/>

                <LinearLayout android:orientation="horizontal"
                              android:layout_gravity="center_vertical">

                    <EditText
                        android:id="@+id/Comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>

                    <Spinner
                        android:id="@+id/Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:prompt="@string/status"/>

                    <ImageView
                        style="?actionButtonStyle"
                        android:id="@+id/AttachImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="startMediaChooser"
                        android:src="@android:drawable/ic_menu_camera"/>

                    <include layout="@layout/picture_view"/>
                </LinearLayout>
            </TableRow>

            <TableRow android:id="@+id/CategoryRow">

                <TextView
                    android:id="@+id/CategoryLabel"
                    style="@style/form_label.compat"
                    android:text="@string/category"/>

                <Button
                    android:id="@+id/Category"
                    style="@style/SmallButton"
                    android:layout_gravity="center_vertical"
                    android:text="@string/select"/>
            </TableRow>

            <TableRow android:id="@+id/MethodRow">

                <TextView
                    android:id="@+id/MethodLabel"
                    style="@style/form_label.compat"
                    android:text="@string/method"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <Spinner
                        android:id="@+id/Method"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:prompt="@string/method"/>

                    <EditText
                        android:id="@+id/Number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/reference_number"
                        android:singleLine="true"
                        android:visibility="invisible"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/PlannerRow"
                android:visibility="gone">

                <TextView
                    android:id="@+id/PlanLabel"
                    style="@style/form_label.compat"
                    android:text="@string/plan"/>

                <LinearLayout
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Plan"
                        style="@style/SmallButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="@string/menu_create"/>

                    <ToggleButton
                        android:id="@+id/togglebutton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:onClick="onToggleClicked"
                        android:textOff="@string/plan_manual"
                        android:textOn="@string/plan_automatic"
                        android:visibility="gone"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>
